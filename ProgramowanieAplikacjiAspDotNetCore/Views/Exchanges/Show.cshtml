@model IEnumerable<AspDotNetAppsProgramming.Entities.ItemEntity>

@{
    ViewData["Title"] = "Show Items";
}

<h2>Items</h2>

<div class="row">
    <table class="table table-striped col-md-12">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Is Visible?</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.IsVisible</td>
                    <td>
                        <a class="btn btn-info" asp-controller="Exchanges" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit text-white"></i>
                        </a>
                        <a class="btn btn-danger" asp-controller="Exchanges" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash text-white"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>